      /IF NOT DEFINED(MD4_H)
      /DEFINE MD4_H
      *
     D MD4_digest_t    S             16A                           based(pDummy)
      *
     D MD4_CTX_t...
     D                 DS                  qualified               based(pDummy)
     D  state                  1     16U 0 dim(4)
     D  stateA                 1     16A
     D  count                 17     24U 0 dim(2)
     D  countA                17     24A
     D  buffer                25     88A
      *
      *  MD4 initialization. Begins an MD4 operation, writing a new context.
     D MD4Init_r...
     D                 PR
     D                                     extproc('MD4R4_+
     D                                     MD4Init_r+
     D                                     ')
     D  context                                   likeds(MD4_CTX_t)
      *
      *  MD4 block update operation. Continues an MD4 message-digest
      *  operation, processing another message block, and updating the
      *  context.
     D MD4Update_r...
     D                 PR
     D                                     extproc('MD4R4_+
     D                                     MD4Update_r+
     D                                     ')
     D  context                                   likeds(MD4_CTX_t)
     D  input                          *   value
     D  inputLen                     10U 0 value
      *
      *  MD4 finalization. Ends an MD4 message-digest operation, writing
      *  the message digest and zeroizing the context.
     D MD4Final_r...
     D                 PR
     D                                     extproc('MD4R4_+
     D                                     MD4Final_r+
     D                                     ')
     D  digest                                    like(MD4_digest_t)
     D  context                                   likeds(MD4_CTX_t )
      *
      *  MD4 operation.
     D MD4Only_r...
     D                 PR
     D                                     extproc('MD4R4_+
     D                                     MD4Only_r+
     D                                     ')
     D  digest                                  like(MD4_digest_t)
     D  input                          *   value
     D  inputLen                     10U 0 value
      *
      *  MD4 initialization. Begins an MD4 operation, writing a new context.
     D MD4Init_c...
     D                 PR
     D                                     extproc('+
     D                                     MD4Init_c+
     D                                     ')
     D  context                                   likeds(MD4_CTX_t)
      *
      *  MD4 block update operation. Continues an MD4 message-digest
      *  operation, processing another message block, and updating the
      *  context.
     D MD4Update_c...
     D                 PR
     D                                     extproc('+
     D                                     MD4Update_c+
     D                                     ')
     D  context                                   likeds(MD4_CTX_t)
     D  input                          *   value
     D  inputLen                     10U 0 value
      *
      *  MD4 finalization. Ends an MD4 message-digest operation, writing
      *  the message digest and zeroizing the context.
     D MD4Final_c...
     D                 PR
     D                                     extproc('+
     D                                     MD4Final_c+
     D                                     ')
     D  digest                                    like(MD4_digest_t)
     D  context                                   likeds(MD4_CTX_t )
      *
      *  MD4 operation.
     D MD4Only_c...
     D                 PR
     D                                     extproc('+
     D                                     MD4Only_c+
     D                                     ')
     D  digest                                  like(MD4_digest_t)
     D  input                          *   value
     D  inputLen                     10U 0 value
      *
      /ENDIF
